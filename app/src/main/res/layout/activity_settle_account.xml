<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kuailedian.happytouch.SettleAccountActivity"
    android:background="#c9c9c9">
    <include layout="@layout/toolbar" />
    <TextView
        android:text="收货地址"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:id="@+id/settle_address_select"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="120dp"
    android:background="@drawable/kuang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/settle_address_name"
            android:text="选择地址"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/settle_address_address"
            android:text="请点击并添加收货地址"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@mipmap/btn_arrow"
        android:layout_width="80dp"
        android:layout_height="40dp" />

</LinearLayout>

    <TextView
        android:text="支付方式"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/kuang">
        <ImageView

            android:background="@mipmap/msp_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView android:id="@+id/op_payaway"
            android:layout_weight="1"
            android:text="支付宝"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/btn_arrow"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:text="订单详情"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_weight="1"
        android:id="@+id/settle_order_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/kuang"
        android:dividerHeight="1px"
        android:divider="@color/grey"
        >


    </ListView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/DarkOrange"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="共计:"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/settle_order_price"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="￥0"
            android:textSize="24dp"
            android:textColor="@color/Red"
            android:textStyle="bold" />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/ordersubmit_selector"
            android:id="@+id/btn_ordersubmit"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>
