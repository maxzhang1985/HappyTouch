<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="25dp"
    android:layout_margin="18dp"
    android:background="@drawable/kuang"
    android:id="@+id/address_item_container"
    >

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/address_item_name"
            android:text="某某某"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="电话:"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/address_item_mobile"
            android:text="13020315551151"
            android:textColor="@color/black"
            android:layout_width="120dp"
            android:layout_height="match_parent" />


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent" android:orientation="horizontal"
       android:layout_height="wrap_content">


       <TextView
           android:id="@+id/address_item_address"
           android:text="13020315551151"
           android:textColor="@color/black"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

   </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <TextView
            android:id="@+id/address_item_action_delete"
            android:text="删除"
            android:textSize="20dp"
            android:textColor="@color/OrangeRed"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/address_item_action_default"
            android:text="默认"
            android:textSize="20dp"
            android:textColor="@color/OrangeRed"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/address_item_action_modify"
            android:layout_weight="1"
            android:text="修改"
            android:textSize="20dp"
            android:gravity="right"
            android:textColor="@color/OrangeRed"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

    </LinearLayout>


</LinearLayout>