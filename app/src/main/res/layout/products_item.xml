<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"

    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp" android:layout_margin="3dp"
        android:background="@drawable/kuang">

        <ImageView
            android:id="@+id/img_productimg"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@mipmap/no_photo"
            android:layout_marginLeft="5dp" android:layout_marginTop="3dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/tv_productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item1 the good"
                android:textColor="#999999"
                android:textSize="18dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_productmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ï¿¥12"
                android:textColor="@color/OrangeRed"
                android:textSize="18dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_addproduct"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@mipmap/btn_plus" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>