<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#f7f7f7" >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="55dp">

        <View
            android:id="@+id/group_tiao"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="88px"
            android:background="@color/OrangeRed" />
        <LinearLayout
            android:id="@+id/reservation_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="订餐电话："
                android:textColor="@android:color/holo_blue_light"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/courses_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="13131535188"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="22dp" />
        </LinearLayout>


        <ExpandableListView
            android:id="@+id/expandlist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/reservation_title"
            android:cacheColorHint="#00000000"
            android:clickable="true"
            android:divider="@null" />
    </RelativeLayout>

<include  layout="@layout/orderbar"/>


</RelativeLayout>