<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >

    <TextView
        android:id="@+id/cartitem_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxWidth="135dp"
        android:singleLine="true"
        android:ellipsize="none"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:gravity="right|center">


    <Button android:id="@+id/btn_cartitem_sub"
        android:background="@mipmap/btn_sub"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/cartitem_amount"
        android:text="9"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/Red"
        />


    <Button android:id="@+id/btn_cartitem_add"
        android:background="@mipmap/btn_plus"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/cartitem_price"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="18dp"
        android:text="ï¿¥128"

        android:textColor="@color/OrangeRed"

        android:gravity="center"
        />

    <CheckBox
        android:id="@+id/cartitem_selected"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        style="@style/MyCheckBox"/>


</LinearLayout>



</LinearLayout>