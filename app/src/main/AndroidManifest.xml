        <activity android:name=".FragmentSampleActivity" />
        <activity
            android:name=".MyBaseActivity"
            android:label="@string/title_activity_my_base" >

        </activity>
        <activity
            android:name=".AddressManagementActivity"
            android:label="@string/title_activity_address_management" >
        </activity>
        <activity
            android:name=".SettleAccountActivity"
            android:label="@string/title_activity_settle_account" >
        </activity>
        <activity
            android:name=".SplashscreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
